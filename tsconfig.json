{
  "compilerOptions": {
    "paths": {
      "@affinity-lab/awqrd-comet/*": ["./src/awqrd/comet/*"],
      "@affinity-lab/awqrd-util/*": ["./src/awqrd/util/*"],
      "@affinity-lab/awqrd-storm/*": ["./src/awqrd/storm/*"],
      "@affinity-lab/awqrd-sapphire/*": ["./src/awqrd/sapphire/*"]
    },

    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "experimentalDecorators": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  }
}
